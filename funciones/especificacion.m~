

function [y_sp]=especificacion(x,y)

%x=imread('eritrocitos.png');
%y=imread('aalcc.png');

N_tot=length(x(:));
x_L=max(x(:));
y_L=max(y(:));

L=max([x(:);y(:)]);
mymap=[linspace(0,1,L)'*ones(1,3)];

[NN,XX]=hist(x(:),L);

cmf=cumsum(NN)/N_tot;


y_sp=round(cmf(y+1)*y_L);
[NN_sp,XX_sp]=hist(y_sp(:),L);

figure()
colormap(mymap)
subplot(221)
image(y)
axis('equal')
title('original')

subplot(222)
image(y_sp)
axis('equal')
title('ecualizada')

subplot(223)
plot(XX,NN)

subplot(224)
plot(XX_sp,NN_sp)

